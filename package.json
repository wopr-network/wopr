{
  "name": "@wopr-network/wopr",
  "version": "1.3.3",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "bin": {
    "wopr": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/cli.ts",
    "daemon": "tsx src/daemon/index.ts",
    "daemon:start": "tsx src/cli.ts daemon start",
    "daemon:stop": "tsx src/cli.ts daemon stop",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "format": "biome format --write src/",
    "check": "biome check src/ && tsc --noEmit",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate:compose": "tsx scripts/generate-compose.ts"
  },
  "overrides": {
    "tar": "^7.5.7",
    "@isaacs/brace-expansion": "^5.0.1"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.42",
    "@clack/prompts": "^1.0.0",
    "@hono/node-server": "^1.19.9",
    "@hono/node-ws": "^1.3.0",
    "@hono/standard-validator": "^0.2.2",
    "@scalar/hono-api-reference": "^0.9.41",
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.39.3",
    "hono": "^4.11.9",
    "hono-openapi": "^1.2.0",
    "hono-rate-limiter": "^0.5.3",
    "hyperswarm": "^4.16.0",
    "picocolors": "^1.1.1",
    "sqlite-vec": "0.1.7-alpha.2",
    "winston": "^3.19.0",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
