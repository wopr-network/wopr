{
  "name": "@wopr-network/wopr",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "bin": {
    "wopr": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/cli.ts",
    "daemon": "tsx src/daemon/index.ts",
    "daemon:start": "tsx src/cli.ts daemon start",
    "daemon:stop": "tsx src/cli.ts daemon stop",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "format": "biome format --write src/",
    "check": "biome check src/ && tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate:compose": "tsx scripts/generate-compose.ts"
  },
  "overrides": {
    "tar": "^7.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.39",
    "@clack/prompts": "^1.0.0",
    "@hono/node-server": "^1.19.9",
    "@hono/node-ws": "^1.3.0",
    "@types/dockerode": "^3.3.38",
    "dockerode": "^4.0.7",
    "hono": "^4.11.9",
    "hono-rate-limiter": "^0.5.3",
    "hyperswarm": "^4.16.0",
    "picocolors": "^1.1.1",
    "sqlite-vec": "0.1.7-alpha.2",
    "winston": "^3.19.0",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
