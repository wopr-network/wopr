{
  "name": "@tsavo/wopr",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "wopr": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "daemon": "tsx src/daemon/index.ts",
    "daemon:start": "tsx src/cli.ts daemon start",
    "daemon:stop": "tsx src/cli.ts daemon stop",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "format": "biome format --write src/",
    "check": "biome check src/ && tsc --noEmit"
  },
  "overrides": {
    "cmake-js": "^8.0.0",
    "tar": "^7.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.12",
    "@clack/prompts": "^0.7.0",
    "@hono/node-server": "^1.13.0",
    "@hono/node-ws": "^1.0.0",
    "@openai/codex-sdk": "^0.91.0",
    "hono": "^4.6.0",
    "hyperswarm": "^4.16.0",
    "picocolors": "^1.0.0",
    "sqlite-vec": "0.1.7-alpha.2",
    "winston": "^3.19.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "node-llama-cpp": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^22.19.7",
    "@types/ws": "^8.18.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
